<UserControl x:Class="PVCR.DragDropExample.Content.WorkPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PVCR.DragDropExample.Content"
             mc:Ignorable="d" 
              d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="layoutWorkPageRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"  />
            <RowDefinition Height="0.4*"  />
        </Grid.RowDefinitions>

        <local:WorkTopPage Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  />

        <local:WorkSchedulePage Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  />


    </Grid>
</UserControl>
