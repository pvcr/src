<UserControl x:Class="PVCR.DragDropExample.Content.NavPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PVCR.DragDropExample.Content"
             mc:Ignorable="d" 
              d:DesignHeight="100" d:DesignWidth="100">
    <Grid x:Name="layoutNavRoot" >
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"  />
            <RowDefinition Height="0.6*"  />
        </Grid.RowDefinitions>
        <local:NavTopPage Margin="2" Grid.Row="0" />

        <local:NavCommentsPage Margin="2" Grid.Row="1"  />


    </Grid>
</UserControl>
